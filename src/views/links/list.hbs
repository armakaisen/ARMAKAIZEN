<div class="container">
    <table id="links_id" class="table table-striped"> 
        <thead>
            <th>URL</th>
            <th>Descripción</th>
            <th>Fecha de Creación</th>
            <th>Operación</th>
        </thead>
        <tbody>
            {{#each links}}
                <tr>
                    <td>
                        <a href="{{url}}" target="_blank">
                            {{ title }}                
                        </a>
                    </td>
                    
                    <td>
                        <p class="m-2">{{ description }}</p>
                    </td>
                    <td>
                        <p class="m-2">{{ timeago created_at }}</p>
                    </td>

                    <td>
                        <div class="btn-group">
                            <div>
                            <a href="/delete/{{id}}" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                            <div>
                            <a href="/edit/{{id}}" class="btn btn-secondary ml-1 btn-sm">Edit</a>
                            </div>
                        </div>
                    </td>                       
                </tr>
           {{/each}}
        </tbody>
    </table>
</div>